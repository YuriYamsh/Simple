{
    "name": "yuri-yamsh/simple",
    "type": "library",
    "description": "Simple package",
    "keywords": [
        "YuriYamsh",
        "Simple"
    ],
    "homepage": "https://github.com/yuri-yamsh/simple",
    "license": "MIT",
    "authors": [
        {
            "name": "Yuri",
            "email": "lawyur@mail.ru",
            "homepage": "https://github.com/YuriYamsh",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.2"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "YuriYamsh\\Simple\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YuriYamsh\\Simple\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
